.flex-wrap{
    height: 100%;
    display: flex;
    /* 主轴为方向 */
    flex-direction: column;
    justify-content: space-between;
    justify-content: space-around;
    align-items: center;
}
.flex-item{
    /* 750px */
    width: 700rpx;
    height: 200rpx;
    text-align: center;
    line-height: 200rpx;
    color: white;
}
.bc_green{
    background-color: green;
}
.bc_red{
    background-color: red;
   
}
.bc_blue{
    background-color: blue;
}